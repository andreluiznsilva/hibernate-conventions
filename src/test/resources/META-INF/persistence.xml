<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="test" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>hibernate.conventions.dummy.DummyEntity</class>

		<properties>

			<property name="hibernate.ejb.naming_strategy" value="hibernate.conventions.dummy.TestConventionNamingStrategy" />

			<!-- Database -->
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.conventions.maxLength" value="30" />

			<!-- Log -->
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.generate_statistics" value="true" />
			<property name="hibernate.cache.infinispan.statistics" value="true" />

			<!-- Test Database -->
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:test;syntax.postgre=true;shutdown=true;close_result=true" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />

		</properties>

	</persistence-unit>

</persistence>